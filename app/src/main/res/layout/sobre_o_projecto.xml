<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/dialog_container_informacoes"
    android:background="@drawable/bottomdialog_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_horizontal_rule_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:padding="12dp"
        android:layout_marginHorizontal="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/informacoes"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:text="Informações"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:text="Desenvolvidor: Benildo Morais"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:text="Contacto: 874585098"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:text="E-mail: benildomorais360@gmail.com"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:text="Projecto Final na cadeira de Programação para dispositivos mobile"/>


</LinearLayout>